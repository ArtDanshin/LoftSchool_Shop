ul.filters
	li.filters__item.filters-item
		.filters-item__head.filter-item-head
			a(href="#").filter-item-head__title Наличие в магазинах
		.filters-item__body
			+radioButs('filter','shop',['shopAll', 'shopIn'],['shopAll','shopIn'],['Во всех магазинах','В ближайшем магазине'],'0')

	li.filters__item.filters-item
		.filters-item__head.filter-item-head
			a(href="#").filter-item-head__title Бренды
		.filters-item__body
			+checkButs('filter','brand',['lenovo', 'Apple','Samsung','Asus','Motorola'],['lenovo', 'Apple','Samsung','Asus','Motorola'],['Lenovo', 'Apple','Samsung','Asus','Motorola'],['1','1','1','0','0'])
	li.filters__item.filters-lower-item
		.filters-item__head.filter-item-head
			a(href="#").filter-item-head__title Цена
		.filters-item__body бла бла бла
	li.filters__item.filters-item
		.filters-item__head.filter-item-head
			a(href="#").filter-item-head__title Цвет
		.filters-item__body бла бла бла
	li.filters__item.filters-item
		.filters-item__head.filter-item-head
			a(href="#").filter-item-head__title Операционные системы
		.filters-item__body
			+checkButs('filter','brand',['Android', 'iOS','WindowsMobile','Symbian','Custom'],['Android', 'iOS','WindowsMobile','Symbian','Custom'],['Android', 'iOS','Windows Mobile','Symbian','Custom'],['1','1','1','0','0'])